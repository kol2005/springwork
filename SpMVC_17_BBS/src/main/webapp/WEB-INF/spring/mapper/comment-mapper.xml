<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.biz.bbs.mapper.CommentDao">


	<insert id="insert">
		INSERT INTO `tbl_comment`
		(`CMT_ID`,
		`CMT_P_ID`,
		`CMT_WRITER`,
		`CMT_TEXT`
		)VALUES(
		#{cmt_id},
		#{cmt_p_id},
		#{cmt_writer},
		#{cmt_text}
		)

	</insert>

	<update id="update">
		UPDATE `tbl_comment`
		SET
		`cmt_p_id` = #{cmt_p_id},
		`cmt_writer` = #{cmt_writer},
		`cmt_text` = #{cmt_text}
		where `cmt_id` = #{cmt_id};

	</update>

</mapper> 